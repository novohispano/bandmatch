- @concerts.each_with_index do |concert, index|
  .container.container-feed
    %h4= concert.start
    %h2.title-feed= concert.display_name
    %h4= concert.performances.collect { |performance| performance.artist.display_name }
    %h5= concert.venue.display_name
    / Button to trigger modal
    %a.btn.btn-warning{"data-toggle" => "modal", :href => "#myModal#{index}", :role => "button"} Make a Plan
    / Modal
    .modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1", :id => "myModal#{index}"}
      .modal-body
      = form_tag plans_path do
        %h3 You are about to make a plan for the following concert.
        = label_tag concert.display_name
        = hidden_field_tag :start,        concert.start
        = hidden_field_tag :display_name, concert.display_name
        = label_tag "What's your plan for this concert?"
        = text_field_tag :description
        = submit_tag "Make a Plan", class: "btn btn-warning"
:javascript
$('#myModal').modal(options)